<%= form_with(model: @profile) do |form| %>
  <% if @profile.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
        <% @profile.errors.each do |attribute, error| %>
          <li><%= "#{attribute.to_s.humanize} #{error}" %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :id, value: @profile.id %>
  
  <div class="mb-3">
    <%= form.label :profile_photo, style: "display: block" %>
    <%= form.file_field :profile_photo, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="d-flex gap-2">
    <%= form.submit(@profile.persisted? ? 'Actualizar' : 'Crear', class: 'btn btn-primary') %>
    <%= link_to "Volver", profiles_path, class: "btn btn-outline-primary" %>
  </div>
<% end %>
