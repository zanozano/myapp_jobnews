<div class="d-flex justify-content-center align-items-center">
  <div class="card custom-container-log col-12 col-lg-8">
    <div class="card-body">
      <h2>Crear nuevo usuario</h2>

      <%= form_for(User.new, url: new_registration_path, html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: f.object %>

        <div class="mb-4 form-group">
          <%= f.label :name %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
        </div>

        <div class="mb-4 form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="mb-4 form-group">
          <%= f.label :password %> <i>(leave blank if you don't want to set a password)</i><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          <% if @minimum_password_length %>
            <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </div>

        <div class="mb-4 form-group">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="actions d-flex gap-2">
          <%= f.submit "Crear Usuario", class: "btn btn-primary" %>
          <%= link_to "Volver", :back, class: "btn btn-outline-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
